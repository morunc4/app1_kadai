<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan=3></th>
    </tr>
  </thead>
</table>
<h2>New book</h2>

<%=form_with model: @book, url:'/books',method: :post do |f| %>
  <div class="field">
    <label for="book_title">Title</label>
    <%=f.text_field:title %>
  </div>


  <div class="field">
    <label for="book_body">Body</label>
    <%=f.text_area:body %>
  </div>


  <%=f.submit 'Create Book' %>

<%end%>